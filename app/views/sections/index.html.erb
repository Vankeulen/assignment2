<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<%= form_tag(sections_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Section #" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<% if @courses.blank? %>
  <h4>There are no sections containing the number <%= params[:search] %>.</h4>
<% end %>
<br>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Course</th>
      <th>Professor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.number %></td>
        <td><%= section.course.name %></td>
        <td><%= section.professor.name %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path %>
