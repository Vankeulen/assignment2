<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<%= form_tag(courses_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Courses" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<% if @courses.blank? %>
  <h4>There are no courses containing the term <%= params[:search] %>.</h4>
<% end %>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Department</th>
      <th>Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.department %></td>
        <td><%= course.hours %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
<br>
<%= link_to 'Welcome Page', welcome_index_path %>
<br><br>
<%= link_to 'Log out', destroy_user_session_path, method: :delete %>
